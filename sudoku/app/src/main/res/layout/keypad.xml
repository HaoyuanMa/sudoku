<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:background="@color/colorKeypadBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keypad"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="*">
    <TableRow >
        <Button
            android:id="@+id/keypad_1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="1" />

        <Button
            android:id="@+id/keypad_2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="2" />

        <Button
            android:id="@+id/keypad_3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="3" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/keypad_4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="4" />

        <Button
            android:id="@+id/keypad_5"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="5" />

        <Button
            android:id="@+id/keypad_6"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="6" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/keypad_7"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="7" />

        <Button
            android:id="@+id/keypad_8"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="8" />

        <Button
            android:id="@+id/keypad_9"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypad"
            android:layout_margin="1dp"
            android:text="9" />
    </TableRow>

    <TableRow>
        <Button
            android:visibility="invisible"/>

        <Button
            android:id="@+id/keypad_0"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/colorKeypadClear"
            android:text="0" />
        <Button
            android:visibility="invisible" />
    </TableRow>
</TableLayout>